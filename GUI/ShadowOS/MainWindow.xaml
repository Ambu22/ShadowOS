<Window x:Class="ShadowOS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        Title="Shadow Logger" Height="350" Width="525"
        MinHeight="650"
        MinWidth="950"
        WindowState="Normal"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        
        xmlns:local="clr-namespace:ShadowOS"
        xmlns:cud="clr-namespace:core.ui.data;assembly=core.ui.data"
        >
    
    <Window.Background>
        <SolidColorBrush Color="{StaticResource BackgroundDark}"></SolidColorBrush>
    </Window.Background>
    
    <local:ShadowLogger />
    
</Window>
