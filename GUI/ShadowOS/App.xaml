<Application x:Class="ShadowOS.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml"
             xmlns:cud="clr-namespace:core.ui.data;assembly=core.ui.data"
             xmlns:cu="clr-namespace:core.ui;assembly=core.ui">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <!--<Color x:Key="HPBlue">#ff0096d6</Color>-->
                    <Color x:Key="MainColor">Orange</Color>
                    <Color x:Key="MainColorLight">White</Color>
                    <Color x:Key="BackgroundDark">#ff000000</Color>
                    <Color x:Key="BackgroundMedium">#ff212121</Color>
                    <Color x:Key="BackgroundLight">#ff676767</Color>
                    <Color x:Key="MainColorMedium">#ffFFD700</Color>
                </ResourceDictionary>
                <cud:Resources />
                <cu:Resources />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>